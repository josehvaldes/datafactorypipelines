{
	"name": "Aggregationsaledataflow",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "domainsales",
						"type": "DatasetReference"
					},
					"name": "DFDomainSalesSource"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "AggregatedDailySales",
						"type": "DatasetReference"
					},
					"name": "OutputSink01"
				}
			],
			"transformations": [
				{
					"name": "aggregation"
				}
			],
			"scriptLines": [
				"parameters{",
				"     partitionkey as string ('bo'),",
				"     datetime as string ('2025-08-13')",
				"}",
				"source(output(",
				"          PartitionKey as string,",
				"          RowKey as string,",
				"          Timestamp as string,",
				"          username as string,",
				"          price as double,",
				"          quantity as integer,",
				"          productname as string,",
				"          clienttaxnum as string",
				"     ),",
				"     allowSchemaDrift: false,",
				"     validateSchema: false,",
				"     limit: 10,",
				"     ignoreNoFilesFound: false) ~> DFDomainSalesSource",
				"DFDomainSalesSource aggregate(groupBy(PartitionKey,",
				"          productname),",
				"     price = sum(price),",
				"          quantity = sum(quantity)) ~> aggregation",
				"aggregation sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          domain as string,",
				"          productname as string,",
				"          year as string,",
				"          month as string,",
				"          day as string,",
				"          quantity as string,",
				"          totalprice as string",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> OutputSink01"
			]
		}
	}
}