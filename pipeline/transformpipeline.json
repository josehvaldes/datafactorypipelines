{
	"name": "transformpipeline",
	"properties": {
		"description": "Read Table storage and do a daily aggregation to a CSV file",
		"activities": [
			{
				"name": "Copy Filter Sales Data to CSV",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "AzureTableSource",
						"azureTableSourceQuery": {
							"value": "PartitionKey eq '@{pipeline().parameters.partitionkey}' and Timestamp ge datetime'@{formatDateTime(addDays(utcNow(),-1),'yyyy-MM-dd')}T00:00:00Z' and Timestamp lt datetime'@{formatDateTime(utcNow(),'yyyy-MM-dd')}T00:00:00Z'\n",
							"type": "Expression"
						},
						"azureTableSourceIgnoreTableNotFound": false
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings",
							"copyBehavior": "FlattenHierarchy"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".csv"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"name": "PartitionKey"
								},
								"sink": {
									"name": "PartitionKey",
									"type": "String"
								}
							},
							{
								"source": {
									"name": "RowKey"
								},
								"sink": {
									"name": "RowKey",
									"type": "String"
								}
							},
							{
								"source": {
									"name": "Timestamp"
								},
								"sink": {
									"name": "Timestamp",
									"type": "String"
								}
							},
							{
								"source": {
									"name": "username"
								},
								"sink": {
									"name": "username",
									"type": "String"
								}
							},
							{
								"source": {
									"name": "price"
								},
								"sink": {
									"name": "price",
									"type": "String"
								}
							},
							{
								"source": {
									"name": "quantity"
								},
								"sink": {
									"name": "quantity",
									"type": "String"
								}
							},
							{
								"source": {
									"name": "productname"
								},
								"sink": {
									"name": "productname",
									"type": "String"
								}
							},
							{
								"source": {
									"name": "clienttaxnum"
								},
								"sink": {
									"name": "clienttaxnum",
									"type": "String"
								}
							}
						],
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "RawSalesTable",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "domainsales",
						"type": "DatasetReference",
						"parameters": {
							"datetime": {
								"value": "@{formatDateTime(addDays(utcNow(),-1),'yyyy-MM-dd')}",
								"type": "Expression"
							},
							"partition": {
								"value": "@pipeline().parameters.partitionkey",
								"type": "Expression"
							}
						}
					}
				]
			},
			{
				"name": "Aggregation Data flow 01",
				"type": "ExecuteDataFlow",
				"dependsOn": [
					{
						"activity": "Copy Filter Sales Data to CSV",
						"dependencyConditions": [
							"Completed"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"dataflow": {
						"referenceName": "Aggregationsaledataflow",
						"type": "DataFlowReference",
						"parameters": {
							"partitionkey": {
								"value": "'@{pipeline().parameters.partitionkey}'",
								"type": "Expression"
							},
							"datetime": {
								"value": "'@{formatDateTime(addDays(utcNow(),-1),'yyyy-MM-dd')}'",
								"type": "Expression"
							}
						},
						"datasetParameters": {
							"DFDomainSalesSource": {
								"datetime": {
									"value": "@{formatDateTime(addDays(utcNow(),-1),'yyyy-MM-dd')}",
									"type": "Expression"
								},
								"partition": {
									"value": "@pipeline().parameters.partitionkey",
									"type": "Expression"
								}
							},
							"OutputSink01": {
								"partitionkey": "bo",
								"datetime": "2025-08-13"
							}
						}
					},
					"compute": {
						"coreCount": 8,
						"computeType": "General"
					},
					"traceLevel": "Coarse"
				}
			}
		],
		"parameters": {
			"partitionkey": {
				"type": "String",
				"defaultValue": "bo"
			}
		},
		"annotations": []
	}
}