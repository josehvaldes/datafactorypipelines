{
	"name": "AggregatedDailySales",
	"properties": {
		"linkedServiceName": {
			"referenceName": "LN_DailySales_Blob",
			"type": "LinkedServiceReference"
		},
		"parameters": {
			"partitionkey": {
				"type": "string",
				"defaultValue": "bo"
			},
			"datetime": {
				"type": "string",
				"defaultValue": "2025-08-10"
			}
		},
		"annotations": [],
		"type": "DelimitedText",
		"typeProperties": {
			"location": {
				"type": "AzureBlobStorageLocation",
				"fileName": {
					"value": "sales_@{dataset().partitionkey}_@{dataset().datetime}.csv\n",
					"type": "Expression"
				},
				"container": "dailysales"
			},
			"columnDelimiter": ",",
			"escapeChar": "\\",
			"firstRowAsHeader": true,
			"quoteChar": "\""
		},
		"schema": [
			{
				"name": "domain",
				"type": "String"
			},
			{
				"name": "productname",
				"type": "String"
			},
			{
				"name": "year",
				"type": "String"
			},
			{
				"name": "month",
				"type": "String"
			},
			{
				"name": "day",
				"type": "String"
			},
			{
				"name": "quantity",
				"type": "String"
			},
			{
				"name": "totalprice",
				"type": "String"
			}
		]
	}
}